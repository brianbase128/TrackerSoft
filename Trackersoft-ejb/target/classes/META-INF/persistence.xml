<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="trackersoftPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/trackersoft</jta-data-source>
    <class>com.project.trackersoft.entity.Actividad</class>
    <class>com.project.trackersoft.entity.CentroCosto</class>
    <class>com.project.trackersoft.entity.Cliente</class>
    <class>com.project.trackersoft.entity.Dominio</class>
    <class>com.project.trackersoft.entity.Factura</class>
    <class>com.project.trackersoft.entity.Provision</class>
    <class>com.project.trackersoft.entity.Proyecto</class>
    <class>com.project.trackersoft.entity.Rol</class>
    <class>com.project.trackersoft.entity.Tarifa</class>
    <class>com.project.trackersoft.entity.Usuario</class>
    <class>com.project.trackersoft.entity.UsuarioRol</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
